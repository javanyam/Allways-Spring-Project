<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="com.springlec.base.dao.customerBoardDeleteDao">

	<update id="customerBoardDelete">
		UPDATE `write` SET writeDeletedate = NOW() WHERE ${result} = #{writeId}
	</update>

	<update id="customerBoardDetailCommentDelete">
		UPDATE `write` SET writeDeletedate = NOW() WHERE ${result} = #{commentId}
	</update>


</mapper>